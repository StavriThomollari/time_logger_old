<h1>Reported Hours</h1>
<br/>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Reporter</th>
      <th scope="col">Project</th>
      <th scope="col">Hours</th>
      <th scope="col">LogDate</th>
    </tr>
  </thead>
  <tbody>
    <% @time_logs.each_with_index do |time_log, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= time_log.user.email %></td>
        <td><%= time_log.project.name %></td>
        <td><%= time_log.hours %></td>
        <td><%= time_log.created_at %></td>
      </tr>  
    <% end %>
  </tbody>
</table>
<%= link_to "Add hours", new_report_path, class: "btn btn-info" %>

